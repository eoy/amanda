<%= simple_form_for @entry_group do |f| %>
  <div class="medium-12 columns">
    <%= f.input :title %>
  </div>
  <div id="js-field-creator" >
    <div class="row field-row">
      <div class="medium-6 columns">
        <input type="text">
      </div>
      <div class="medium-6 columns">
        <select name="type" id="type-select">
          <option value="string">String</option>
          <option value="text">Text</option>
          <option value="file">File</option>
          <option value="email">Email</option>
          <option value="integer">Number</option>
          <option value="association">Association</option>
        </select>
      </div>
      <a href="#" class="js-remove-row" style="float: right; position: absolute; bottom: 25px;">x</a>
    </div>
    <div class="medium-12 columns">
      <a href="#" id="add_more" class="button button--flat button--tiny">Add more</a>
    </div>
  </div>
  <div class="medium-12 columns">
    <%= f.input :fields, as: :text, label: "Debug" %>
    <%= f.submit %>
  </div>
<% end %>

<%#= react_component('FieldBuilder') %>